<%- include('partials/header.ejs')%>
<body>
  <%- include('partials/homenavbar.ejs')%>

  <div class="container">
    <div class="p-5 mb-4 bg-body-secondary border rounded-3 mt-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Bem Vindo ao Blog!</h1>
        <p class="col-md-8 fs-4">Leia os principais artigos sobre tecnologia.</p>
      </div>
    </div>
    <% articles.forEach(article => {  %>
      <div class="card">
        <div class="card-header"><%= article.title %></div>
        <div class="card-body">
          <a href="/<%= article.slug%>" class="btn btn-dark">Leia Artigo</a>
        </div>
      </div>
      <br>
    <% }) %>
  </div>
</body>

<%- include('partials/footer.ejs')%>
