<%- include('../../partials/header.ejs')%> <%- include('../../partials/navbar.ejs')%>
<body>
  <div class="container">
    <div class="d-flex justify-content-between mt-3">
      <h4>Categorias</h4>
      <a href="/admin/categories/new" class="btn btn-success">Criar Nova</a>
    </div>
    <hr />
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Slug</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(category => {  %>
          <tr>
            <th><%= category.id %></th>
            <th><%= category.title %></th>
            <th><%= category.slug %></th>
            <th>
              <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>

              <form method="POST" action="/categories/delete" class="d-inline-block" onsubmit="cancelarFormulario(event, this)"" >
                <input type="hidden" value="<%= category.id %>" name="id">
                <button class="btn btn-danger" type="submit">Excluir</button>
              </form>
            </th>
          </tr>

        <% }) %>
      </tbody>
    </table>
  </div>
</body>
<%- include('../../partials/footer.ejs')%>
<script>
  cancelarFormulario = (event, form) => {
    event.preventDefault()
    var decision = confirm('VocÃª deseja deletar?')

    if(decision) {
      form.submit()
    }
  }
</script>
