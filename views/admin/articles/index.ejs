<%- include('../../partials/header.ejs')%> <%- include('../../partials/navbar.ejs')%>
<body>
  <div class="container">
    <div class="d-flex justify-content-between mt-3">
      <h4>Artigos</h4>
      <a href="/admin/articles/new" class="btn btn-success">Criar Nova</a>
    </div>
    <hr />
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Slug</th>
          <th>Categoria</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% articles.forEach(article => {  %>
          <tr>
            <th><%= article.id %></th>
            <th><%= article.title %></th>
            <th><%= article.slug %></th>
            <th><%= article.categoria.title %></th>
            <th>
              <a href="/admin/article/edit/<%= article.id %>" class="btn btn-warning">Editar</a>

              <form method="POST" action="/article/delete" class="d-inline-block" onsubmit="cancelarFormulario(event, this)"" >
                <input type="hidden" value="<%= article.id %>" name="id">
                <button class="btn btn-danger" type="submit">Excluir</button>
              </form>
            </th>
          </tr>

        <% }) %>
      </tbody>
    </table>
  </div>
</body>
<%- include('../../partials/footer.ejs')%>
<script>
  cancelarFormulario = (event, form) => {
    event.preventDefault()
    var decision = confirm('VocÃª deseja deletar?')

    if(decision) {
      form.submit()
    }
  }
</script>
