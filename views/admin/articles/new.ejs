<%- include('../../partials/header.ejs')%>

<body>
  <%- include('../../partials/navbar.ejs')%>
  <div class="container">
    <div class="card mt-3">
      <div class="card-header"><h5>Novo Artigo:</h5></div>
      <div class="card-body">
        <form class="form-group" method="POST" action="/categories/save">
          <input type="text" name="title" class="form-control" placeholder="TÃ­tulo Arquivo" /><br />
          <textarea name="body" placeholder="Digite seu artigo" id="article"></textarea>
          <div class="form-floating">
            <select class="form-select">
            <% categories.forEach(category => { %>
              <option value="<%= category.id %>"><%= category.title %></option>
            <% })%>
            </select>
          </div>
          <button class="btn btn-warning mt-2" type="submit">Cadastrar</button>
        </form>
      </div>
    </div>
  </div>
</body>

<%- include('../../partials/footer.ejs')%>
